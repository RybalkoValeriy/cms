@model FCmsManager.ViewModel.EditFilterViewModel

<div>
    <h1>
        Repository
        @if (String.IsNullOrEmpty(Model.Name))
        {
            <i>New</i>
        }
        else
        {
            <text>@Model.Name</text>
        }
    </h1>

    <form method="post" action="/fcmsmanager/filter/save">
        @Html.AntiForgeryToken()
        <input type="hidden" name="Id" value="@Model.Id" />
        <div>
            <div class="form-group">
                <label for="repositoryNameInput">Repository name</label>
                <input type="text" name="Name" class="form-control" id="repositoryNameInput" placeholder="name" value="@Model.Name" />
                <small class="form-text error">@Html.ValidationMessage("Name")</small>
            </div>
            <div class="form-group">
                <label for="definisionTypeInput">Type</label>
                @Html.DropDownListFor(model => model.Type, Model.TypeList, Model.Type, htmlAttributes: new { @class = "form-control" })
                <small class="form-text error">@Html.ValidationMessage("Name")</small>
            </div>
        </div>
        <button>Save</button>
    </form>
</div>